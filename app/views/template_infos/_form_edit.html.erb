<%= form_for @wx_message,:url=>template_info_url,:html=>{:class=>''},multipart:true do |wx_message|%>
  <div class="form-group">
    <%= wx_message.label :title,'消息标题'%>
    <%= wx_message.text_field :title,class:'form-control'%>
  </div>
  <div class="form-group">
    <%= wx_message.label :description,'消息内容'%>
    <%= wx_message.text_area :description,class:'form-control',size:'30x10',style:'resize:none'%>
  </div>
  <div class="form-group">
    <%= wx_message.label :pic_url,'封面图片'%>
    <%= wx_message.file_field :pic_url,class:'form-control'%>
  </div>

  <%if @wx_message.pic_url.present?%>
    <div class="form-group">
      <%= image_tag @wx_message.pic_url.url,style:'height:120px'%>
    </div>
  <%else%>
    <div class="form-group" style="display: none">
      <%= image_tag '',style:'height:120px'%>
    </div>
  <%end%>
  <div class="form-group">
    <%= wx_message.label :url,'消息链接'%>
    <%= wx_message.text_field :url,class:'form-control'%>
  </div>
  <div class="center col-md-8">
    <%= wx_message.submit '新增',class:'btn btn-success'%>
    <%= link_to '返回', template_infos_path, class: 'btn btn-primary' %>
  </div>
<%end%>