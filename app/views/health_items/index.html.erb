<div class="row">
  <div class="col-md-12">
    <div class="pull-right" style="margin-right:20px;"><%= link_to '新增', new_health_item_path, class: 'btn btn-primary' %></div>
  </div>
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>健康项目</h2>
      </div>
      <div class="box-content">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>项目名称</th>
              <th>单位</th>
              <th>所属用户</th>
              <th>是否开启</th>
              <th>操作</th>
            </tr>
          </thead>

          <tbody>
            <% @health_items.each do |health_item| %>
              <tr>
                <td><%= health_item.name %></td>
                <td><%= health_item.unit %></td>
                <td><%= User.find(health_item.user_id).truename if health_item.user_id %></td>
                <td><%= t("health_item.is_check.#{health_item.is_check}") if health_item.is_check.present? %></td>
                <td><%= link_to '删除', health_item, method: :delete, data: { confirm: '确认删除吗?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
