<div class="row">
	<div class="well col-md-5 center">
		<%= form_for(health_item) do |f| %>
			<% if health_item.errors.any? %>
				<div id="error_explanation">
					<ul>
					<% health_item.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
					</ul>
				</div>
			<% end %>

			<div class="form-group">
				<%= f.label :name %><span style="color:red;"> * </span>
				<%= f.text_field :name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :unit %>
				<%= f.text_field :unit, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :normal_min %>
				<%= f.text_field :normal_min, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :normal_max  %>
				<%= f.text_field :normal_max, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :value_range %><span style="color:red;"> * </span>
				<%= f.text_field :value_range, placeholder: "格式:最小值,最大值(例:60,180)", class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :icon %><span style="color:red;"> * </span>
				<%= f.text_field :icon, class: "form-control" %>
				<a href="/icons/demo_fontclass.html" target="_blank">项目内容图标库</a>
			</div>

			<div class="form-group">
				<%= f.label :icon_bgcolor %><span style="color:red;"> * </span>
				<%= f.text_field :icon_bgcolor, placeholder: "格式: red, #f0f0f0, rgb(255,255,255)", class: "form-control" %>
			</div>

			<div>
				<%if params[:action]=='new'%>
				<%= f.radio_button :is_admin, 0, checked:true %>
				<%= f.label :is_admin, "不是默认项目"%>
				<%= f.radio_button :is_admin, 1 %>
				<%= f.label :is_admin, "是默认项目" %>
				<%else%>
				<%= f.hidden_field :is_admin %>
				<%end%>
			</div>

			<div class="center col-md-8">
				<button onclick="return validate();" class="btn btn-success">保存</button>
				<%= link_to "返回", health_items_path, class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div><!--/row-->
