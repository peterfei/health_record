<div class="row">
  <div class="text-center"><h2>会员中心</h2></div>
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>会员中心</h2>
      </div>
      <div class="box-content">
        <ul class="nav nav-tabs" id="myTab">
          <% if params[:general_active] %>
          <li><a href="#user_vip">VIP会员</a></li>
          <li class="active"><a href="#user_general">普通会员</a></li>
          <% else %>
          <li class="active"><a href="#user_vip">VIP会员</a></li>
          <li><a href="#user_general">普通会员</a></li>
          <% end %>
        </ul>

        <div id="myTabContent" class="tab-content">
          <% if params[:general_active].present? %>
          <div class="tab-pane" id="user_vip">
          <% else %>
          <div class="tab-pane active" id="user_vip">
          <% end %>
            <table class="table">
              <thead>
                <tr>
                  <th>姓名</th>
                  <th>性别</th>
                  <th>年龄</th>
                  <th>民族</th>
                  <th>血型</th>
                  <th>证件类型</th>
                  <th>证件号码</th>
                  <th>学历</th>
                  <th>职业</th>
                  <th>职务</th>
                  <th>职称</th>
                  <th>兴趣爱好</th>
                  <th>手机号码</th>
                  <th width="18%">操作</th>
                </tr>
              </thead>

              <tbody>
                <% @vip_users.each do |user| %>
                  <tr>
                    <td><%= user.truename %></td>
                    <td><%= t("user.sex.#{user.sex}") if user.sex.present? %></td>
                    <td><%= user.age %></td>
                    <td><%= user.nation %></td>
                    <td><%= t("user.blood_type.#{user.blood_type}") if user.blood_type.present? %></td>
                    <td><%= t("user.id_type.#{user.id_type}") if user.id_type.present? %></td>
                    <td><%= user.id_code %></td>
                    <td><%= t("user.education.#{user.education}") if user.education.present? %></td>
                    <td><%= user.job_list.join(",") rescue '' %></td>
                    <td><%= user.duty %></td>
                    <td><%= user.skill_level_list.join(",") rescue '' %></td>
                    <td><%= user.hobby_list.join(",") rescue '' %></td>
                    <td><%= user.username %></td>
                    <td>
                      <%= link_to '查看', user, class: "btn btn-primary"  %>
                      <%= link_to '删除', user, method: :delete, data: { confirm: '此用户所有相关数据将被永久移除,确认删除吗?' }, class: "btn btn-danger" %>
                      <% if user.vip_mark==1 %>
                        <%= link_to '会员卡', UserVip.find_by("user_id=#{user.id}"), class: "btn btn-success"  %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <div style="background:#f1f1f1;" class="text-center">
              <%= paginate @vip_users %>
              <%= page_entries_info @vip_users %>
            </div>
          </div>

          <% if params[:general_active].present? %>
          <div class="tab-pane active" id="user_general">
          <% else %>
          <div class="tab-pane" id="user_general">
          <% end %>
            <table class="table">
              <thead>
                <tr>
                  <th>微信名称</th>
                  <th>微信头像</th>
                  <th>操作</th>
                </tr>
              </thead>

              <tbody>
                <% @general_users.each do |user| %>
                  <tr>
                    <td><%= user.wx_name %></td>
                    <td><img style="width:100px;height:120px;" src="<%= user.wx_avatar %>"/></td>
                    <td>
                      <%= link_to '查看', user, class: "btn btn-primary"  %>
                      <%= link_to '删除', user, method: :delete, data: { confirm: '此用户所有数据将被永久移除,确认删除吗?' }, class: "btn btn-danger" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <div style="background:#f1f1f1;" class="text-center">
              <%= paginate @general_users, param_name: :general_page, params: { general_active:1 } %>
              <%= page_entries_info @general_users %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
    </div>
  </div>
</div>
