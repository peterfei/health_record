<div class="tab-pane" id="health_item_record">
	<!-- search_form -->
	<div class="row">
	  <div class="box col-md-12">
	    <div class="box-content">
	      <div class="page-header">
	        <h1 class="text-center">数据统计</h1>
	      </div>

	      <div class="form-group col-md-2">
	        <div style="font-weight:bold;margin-top: 8px">姓名：<%= @user.truename %></div>
	      </div>
	      <div class="form-group col-md-5">
	        <label class="col-sm-3 control-label" style="margin-top: 8px">日期:</label>
	        <div class="col-md-4">
	          <input type="text" name="start_at_record" id="start_at_record" class="form-control datepicker"/>
	        </div>
	        <div class="text-center col-sm-1" style="margin-top: 8px">至</div>
	        <div class="col-md-4">
	          <input type="text" name="end_at_record" id="end_at_record" class="form-control datepicker"/>
	        </div>
	      </div>
	      <div class="form-group col-md-3">
	        <label class="col-sm-5 control-label" style="margin-top: 8px">项目名称:</label>
	        <div class="col-md-7">
	          <select name="health_item_id" id="health_item_id" class="form-control select2">
			<option value="">--- 请选择 ---</option>
	            <% HealthItem.where("user_id = ? AND is_check=1", @user.id).each do |h|%>
	              <option value="<%= h.id %>"><%= h.name %></option>
	            <% end %>
	          </select>
	        </div>
	      </div>
	      <div class="form-group col-md-2">
	        <button class="btn btn-primary" onclick="checkreitemrecords();">查看</button>
	      </div>
	    </div>
	  </div>
	</div>
	<!-- search_form end -->

	<div class="row" id="item_records_info"></div>
</div>
