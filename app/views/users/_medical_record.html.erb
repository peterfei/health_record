<div class="tab-pane" id="medical_record">
  <!-- search_form -->
  <div class="row">
    <div class="box col-md-12">
      <div class="box-content">
        <div class="page-header">
          <h1 class="text-center">病历记录</h1>
        </div>

        <div class="form-group col-md-2">
          <div style="font-size:18px;font-weight:bold;">姓名：<%= @user.truename %></div>
          <input type="hidden" name="user_id" id="user_id" value="<%= @user.id %>">
        </div>
        <div class="form-group col-md-5">
          <label class="col-sm-3 control-label">日期:</label>
          <div class="col-md-4">
            <input type="text" name="start_at" id="start_at" class="form-control col-md-4"/>
          </div>
          <div class="text-center col-sm-1">至</div>
          <div class="col-md-4">
            <input type="text" name="end_at" id="end_at" class="form-control"/>
          </div>
        </div>
        <div class="form-group col-md-3">
          <label class="col-sm-4 control-label">类型:</label>
          <div class="col-md-8">
            <select name="category" id="category" class="form-control">
              <option value="">--- 请选择 ---</option>
              <% Setting.category.each do |c|%>
                <option value="<%= c %>"><%= c %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group col-md-2">
          <button class="btn btn-primary" onclick="checkmedicalrecords();">查看</button>
        </div>
      </div>
    </div>
  </div>
